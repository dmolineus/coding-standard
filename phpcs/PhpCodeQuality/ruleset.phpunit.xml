<?xml version="1.0" encoding="UTF-8"?>
<ruleset name="PhpCodeQualityPHPUnit">
  <description>This coding standard includes only the custom rules of the PHP code quality project and is solely used for selftesting.</description>
  <arg value="v"/>
  <arg name="report" value="full"/>
  <!-- Commenting -->
  <rule ref="PhpCodeQuality.Commenting.BlockComment" />
  <rule ref="PhpCodeQuality.Commenting.ClassComment" />
  <rule ref="PhpCodeQuality.Commenting.FunctionComment.IncorrectParamVarName" />
  <rule ref="PhpCodeQuality.Commenting.FunctionComment.SpacingAfterParams" />
  <rule ref="PhpCodeQuality.Commenting.FunctionComment.TypeHintMissing" />
  <rule ref="PhpCodeQuality.Commenting.VariableComment" />
  <rule ref="PhpCodeQuality.Files.EncodingUtf8" />
  <rule ref="PhpCodeQuality.PHP.CommentedOutCode" />
  <rule ref="PhpCodeQuality.PHP.ForbiddenFunctions" />
  <rule ref="PhpCodeQuality.Strings.UnnecessaryStringConcat" />
  <rule ref="PhpCodeQuality.WhiteSpace.WhitespaceAfterAsterisk" />
</ruleset>
